<% layout('/layout/boilerplate') %>
    <div class="card container col-6 my-3" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">
                <%= data.companyName %>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">
                <%= data.symbol %>
            </h6>
            <p class="card-text">
            <table class="table table-hover">
                <tr>
                    <td>
                        52 week-high
                    </td>
                    <td>
                        <%= data.high52 %>
                    </td>
                </tr>
                <tr>
                    <td>52 week-low</td>
                    <td>
                        <%= data.low52 %>
                    </td>
                </tr>
                <tr>
                    <td>Close Price</td>
                    <td>
                        <%= data.closePrice %>
                    </td>
                </tr>
                <tr>
                    <td>Open Price</td>
                    <td>
                        <%= data.open %>
                    </td>
                </tr>
                <tr>
                    <td>Day High</td>
                    <td>
                        <%= data.dayHigh %>
                    </td>
                </tr>
                <tr>
                    <td>Day Low</td>
                    <td>
                        <%= data.dayLow %>
                    </td>
                </tr>
                <tr>
                    <td>Upper Band</td>
                    <td>
                        <%= data.pricebandupper %>
                    </td>
                </tr>
                <tr>
                    <td>Lower Band</td>
                    <td>
                        <%= data.pricebandlower %>
                    </td>
                </tr>
                <tr>
                    <td>Last Price</td>
                    <td>
                        <%= data.lastPrice %>
                    </td>
                </tr>
            </table>
            </p>
            <a href="/stocks/<%= data.symbol %>/buy" class="card-link btn btn-success">Buy</a>
            <a href="/stocks/<%= data.symbol %>/sell" class="card-link btn btn-danger">Sell</a>
        </div>
    </div>
    <footer class="footer bg-dark py-3 fixed-bottom mt-auto">
        <div class="container">
            <span class="text-muted">&copy; VTradeIN</span>
        </div>
    </footer>